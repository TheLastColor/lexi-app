<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/itemCard"
    android:backgroundTint="@color/purple"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnTrash"
            app:backgroundTint="@color/light_purple"
            app:srcCompat="@drawable/trash_icon"
            app:tint="@color/white"
            app:layout_constraintTop_toTopOf="@id/txtName"
            app:layout_constraintBottom_toBottomOf="@id/ivEmailIcon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPatient"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:elevation="6dp"
            android:src="@drawable/ic_user_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtName"
            app:layout_constraintBottom_toBottomOf="@id/ivEmailIcon"
            app:shapeAppearanceOverlay="@style/circleImageViewStyle" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="20sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivPatient"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/ivEmailIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_email"
            app:layout_constraintStart_toStartOf="@id/txtName"
            app:layout_constraintTop_toBottomOf="@id/txtName"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/icon_user_email"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/ivEmailIcon"
            app:layout_constraintStart_toEndOf="@id/ivEmailIcon"
            app:layout_constraintBottom_toBottomOf="@id/ivEmailIcon"
            android:layout_marginStart="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddText"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnSeeNotes"
            app:layout_constraintTop_toBottomOf="@id/ivPatient"
            android:backgroundTint="@color/white"
            android:text="Agregar texto"
            android:layout_marginEnd="10dp"
            android:textColor="@color/purple"
            app:icon="@drawable/ic_text_scanner"
            app:iconTint="@color/purple"
            android:layout_marginTop="20dp"
            app:cornerRadius="10dp"
            android:textAppearance="@style/textMaterialButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSeeNotes"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/btnAddText"
            app:layout_constraintTop_toTopOf="@id/btnAddText"
            app:layout_constraintBottom_toBottomOf="@id/btnAddText"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/white"
            android:text="Ver notas"
            android:textColor="@color/purple"
            app:icon="@drawable/notes_icon"
            app:iconTint="@color/purple"
            app:iconPadding="-5dp"
            app:cornerRadius="10dp"
            android:textAppearance="@style/textMaterialButton"/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/vDivider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            app:dividerColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/btnAddText"
            app:layout_constraintStart_toStartOf="@id/btnAddText"
            app:layout_constraintEnd_toEndOf="@id/btnSeeNotes"/>

        <TextView
            android:id="@+id/txtSeeMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver mÃ¡s"
            android:textColor="@color/white"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/vDivider"
            app:layout_constraintStart_toStartOf="@id/vDivider"
            android:layout_marginStart="4dp"/>

        <ImageView
            android:id="@+id/icSeeMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/txtSeeMore"
            app:layout_constraintBottom_toBottomOf="@id/txtSeeMore"
            app:layout_constraintEnd_toEndOf="@id/vDivider"
            android:src="@drawable/down_arrow"
            android:layout_marginTop="6dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>