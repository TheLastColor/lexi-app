<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.games.whereistheletter.WhereIsTheLetterActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ivMiniLogo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_colorFilter="@color/purple"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/amoeba" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/logo"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@style/title"
        tools:textColor="@color/black"/>

    <View
        android:id="@+id/vIcClose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_background"
        android:backgroundTint="@color/light_purple"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/vIcClose"
        app:layout_constraintStart_toStartOf="@id/vIcClose"
        app:layout_constraintEnd_toEndOf="@id/vIcClose"
        app:layout_constraintBottom_toBottomOf="@id/vIcClose"
        android:background="@drawable/ic_close" />
    <ImageView
        android:id="@+id/btnHelp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/help_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vIcClose"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"/>
    <ProgressBar
        android:id="@+id/progressBar"
        app:layout_constraintTop_toTopOf="@id/txtWord"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layoutButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/light_purple"/>
    <TextView
        android:id="@+id/txtWord"
        android:text="PALABRA:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/ivMiniLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:textAppearance="@style/subtitle"/>
    <TextView
        tools:text="WordToPlay"
        android:id="@+id/txtVariableWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/txtWord"
        app:layout_constraintTop_toBottomOf="@id/txtWord"
        app:layout_constraintEnd_toEndOf="@id/txtWord"
        android:textAppearance="@style/title"/>
    <ImageView
        android:id="@+id/iconVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/volume_high"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/txtVariableWord"
        app:layout_constraintTop_toTopOf="@id/txtVariableWord"
        app:layout_constraintBottom_toBottomOf="@id/txtVariableWord"/>

    <LinearLayout
        android:id="@+id/txtFindLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/txtVariableWord"
        app:layout_constraintStart_toStartOf="@id/txtVariableWord"
        app:layout_constraintEnd_toEndOf="@id/txtVariableWord">
        <TextView
            android:id="@+id/txtMessage"
            android:text="Â¡ENCUENTRA LA LETRA "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textAppearance="@style/subtitle"/>
        <TextView
            android:id="@+id/txtVariableLetter"
            tools:text="D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textAppearance="@style/subtitle"/>
        <TextView
            android:id="@+id/txtClose"
            android:text="!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textAppearance="@style/subtitle"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/containerWord"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/containerWord"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResult"
            android:text="@string/result"
            android:backgroundTint="@color/light_purple"
            android:textColor="@color/white"
            android:layout_width="300dp"
            android:textSize="30sp"
            android:paddingVertical="15dp"
            android:paddingHorizontal="25dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/textMaterialButton"
            app:cornerRadius="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOtherWord"
            android:text="@string/change_word"
            android:layout_width="250dp"
            android:layout_height="70dp"
            app:icon="@drawable/swap_horizontal"
            android:textAppearance="@style/textMaterialButton"
            app:iconSize="24dp"
            app:cornerRadius="10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>