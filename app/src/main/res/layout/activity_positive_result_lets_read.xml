<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.games.letsread.result.PositiveResultLetsReadActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ivMiniLogo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_colorFilter="@color/purple"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/amoeba" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/logo"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@style/title"
        tools:textColor="@color/black"/>

    <TextView
        android:id="@+id/txtWellDone"
        android:text="Â¡LO HICISTE MUY BIEN!"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ivClaps"
        app:layout_constraintEnd_toEndOf="@id/ivClaps"
        app:layout_constraintBottom_toTopOf="@id/ivClaps"/>

    <ImageView
        android:id="@+id/ivClaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/ic_claps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnGoInit"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="@id/ivClaps"
        app:layout_constraintEnd_toEndOf="@id/ivClaps"
        app:layout_constraintBottom_toTopOf="@id/btnGoInit"
        android:text="SEGUIR LEYENDO"
        android:textSize="30dp"
        android:layout_margin="20dp"
        android:backgroundTint="@color/purple"
        android:textColor="@color/white"
        app:iconTint="@color/white"
        app:icon="@drawable/ic_end_arrow"
        app:iconGravity="end"
        app:cornerRadius="10dp"
        android:textAppearance="@style/textMaterialButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoInit"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/btnNextText"
        app:layout_constraintEnd_toEndOf="@id/btnNextText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/white"
        android:text="INICIO"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:textColor="@color/purple"
        app:icon="@drawable/ic_home"
        app:strokeColor="@color/purple"
        app:strokeWidth="2dp"
        app:iconPadding="-15dp"
        app:iconTint="@color/purple"
        app:cornerRadius="10dp"
        android:textAppearance="@style/textMaterialButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>